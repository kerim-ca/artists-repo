<% if (artist) { %>
    <h1>Artist: <%= artist.artist_name %></h1>
    <p>Genre: <%= artist.genre %></p>

    <h2>Albums</h2>
    <% if (albums && albums.length > 0) { %>
        <ul>
            <% albums.forEach(album => { %>
                <li>
                    <a href="/albums/<%= album.id %>"><%= album.album_name %></a> 
                    (<%= album.album_year %>)
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No albums found for this artist.</p>
    <% } %>

    <h3>Add a new Album</h3>
    <form action="/albums/create" method="post">
        <input type="hidden" name="artist_id" value="<%= artist.id %>">
        <label for="album_name">Album Name:</label>
        <input type="text" id="album_name" name="album_name" required>
        <label for="album_year">Year:</label>
        <input type="number" id="album_year" name="album_year" required>
        <button type="submit">Add Album</button>
    </form>
<% } else { %>
    <h1>Artist not found</h1>
<% } %>